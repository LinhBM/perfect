<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="card padding-md margin-top-md">
        <h2 class="text-center"><%= t ".title" %></h2>
        <%= form_for resource, as: resource_name,
          url: session_path(resource_name) do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, placeholder: t("femail"),
              autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, placeholder: t("fpass"),
              autocomplete: "off", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label t ".label15" %>
            </div>
          <% end -%>

          <div class="form-group">
            <%= f.submit t(".title"), class: "btn btn-success btn-block" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
