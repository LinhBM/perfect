<h2><%= t ".title" %></h2>

<%= form_for resource, as: resource_name, url: password_path(resource_name),
  html: {method: :put} do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
  <div class="field">
    <%= f.text_field :username, pladeholder: t("fuser") %><br/>
    <%= f.email_field :email, pladeholder: t("femail") %><br/>
    <%= f.telephone_field :phone, pladeholder: t("fphone") %><br/>
    <%= f.password_field :password, pladeholder: t("fpass"),
      autofocus: true, autocomplete: "off" %><br/>
    <%= f.password_field :password_confirmation, pladeholder: t("fconnewpass"),
      autocomplete: "off" %><br/>
    <%= f.submit t(".submit") %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
