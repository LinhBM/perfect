<h2><%= t ".new" %></h2>

<%= form_for resource, as: resource_name, url: unlock_path(resource_name),
  html: {method: :post} do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label t ".femail"<br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit t ".new" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
